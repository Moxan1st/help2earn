# Help2Earn Backend Environment Variables
# Copy this file to .env and fill in your values

# ============ Mock Mode ============
# Set to "true" to use mock implementations (for development/testing)
# Set to "false" to use real services (for production)
MOCK_DATABASE=false
MOCK_STORAGE=false
MOCK_BLOCKCHAIN=false
MOCK_VISION=false

# ============ Database (Supabase) ============
# PostgreSQL connection string with URL-encoded password
# Special characters like [ ] must be encoded as %5B %5D
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres?sslmode=require

# ============ Storage (Google Cloud Storage) ============
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
UPLOAD_DIR=uploads

# ============ Blockchain (Sepolia Testnet) ============
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
TOKEN_CONTRACT_ADDRESS=0x27c52186e40AcbEF3E631127Ae1eA4c6Ce07A182
DISTRIBUTOR_CONTRACT_ADDRESS=0xF69dBF172Ee859151A34f47a7BB73da1010849f1
MINTER_PRIVATE_KEY=your_wallet_private_key

# ============ Vision AI (Gemini) ============
GEMINI_API_KEY=your_gemini_api_key

# ============ SpoonOS Agent ============
# SpoonOS ReAct Agent is enabled by default
# Set to "false" to use original Help2EarnAgent as fallback
USE_SPOON_AGENT=true

# SpoonOS uses Gemini as the LLM (reuses GEMINI_API_KEY above)
# Optional: specify a different model for SpoonOS agent
# SPOON_GEMINI_MODEL=gemini-2.0-flash

# ============ Proxy (Optional) ============
# Required if Gemini API is blocked in your region
# HTTPS_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=http://127.0.0.1:7890

# ============ Server ============
HOST=0.0.0.0
PORT=8000
NEXT_PUBLIC_API_URL=http://localhost:8000
